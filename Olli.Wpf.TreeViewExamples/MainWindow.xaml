<Window x:Class="Olli.Wpf.TreeViewExamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Olli.Wpf.TreeViewExamples"
        xmlns:treeViews="clr-namespace:Olli.Wpf.TreeViews;assembly=Olli.Wpf.TreeViews"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <treeViews:DirectoryTreeView x:Name="directoryTreeView_example" />
        <TextBox Text="{Binding FileContents}" Grid.Column="1" />
    </Grid>
</Window>
